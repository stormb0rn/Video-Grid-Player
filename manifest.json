{
  "manifest_version": 3,
  "name": "Video Grid Player",
  "version": "1.0",
  "description": "Play multiple videos in a grid layout",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Video Grid Player",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["tabs", "downloads"],
  "background": {
    "service_worker": "background.js"
  }
} 